<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        tools:context=".HomeActivity">

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
                 android:id="@+id/layoutFragmentPlaceholder"
                 android:layout_weight="1"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="41dp"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:background="@drawable/component_235_1"
                  android:gravity="bottom">
        <ImageButton android:layout_width="0dp" android:layout_height="40dp"
                     android:layout_weight="1"
                     android:id="@+id/btnNotification"
                     android:src="@drawable/component_237_1"
                     android:background="#f8f8f8"/>
        <ImageButton android:layout_width="0dp" android:layout_height="40dp"
                     android:layout_weight="1"
                     android:id="@+id/btnHome"
                     android:src="@drawable/component_241"
                     android:background="#f8f8f8"/>
        <ImageButton android:layout_width="0dp" android:layout_height="40dp"
                     android:layout_weight="1"
                     android:id="@+id/btnSetting"
                     android:src="@drawable/component_236_1"
                     android:background="#f8f8f8"/>
    </LinearLayout>

</LinearLayout>