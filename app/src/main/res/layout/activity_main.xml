<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/ivBg"
            android:src="@drawable/component_290_1"
            android:adjustViewBounds="true"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.3624"
            app:layout_constraintLeft_toLeftOf="@id/ivBg"
            app:layout_constraintRight_toRightOf="@id/ivBg"
            app:layout_constraintTop_toTopOf="@id/ivBg"
            app:layout_constraintBottom_toBottomOf="@id/ivBg"
            app:layout_constraintHorizontal_bias="0.2171"
            app:layout_constraintVertical_bias="0.0979"
            android:id="@+id/ivHello"
            android:src="@drawable/component_14_3"
            android:adjustViewBounds="true"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5176"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBg"
            app:layout_constraintBottom_toTopOf="@id/layoutForm"
            android:id="@+id/ivAppName"
            android:src="@drawable/component_9_2"
            android:adjustViewBounds="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.7520"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnLogin"
            android:id="@+id/layoutForm">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"
                android:id="@+id/ivUsername"
                android:src="@drawable/component_10_2"
                android:adjustViewBounds="true"/>

        <EditText
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.5500"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                android:id="@+id/edtUsername"
                android:inputType="textEmailAddress"/>

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivUsername"
                android:layout_marginTop="6dp"
                android:id="@+id/ivPassword"
                android:src="@drawable/component_11_2"
                android:adjustViewBounds="true"/>

        <EditText
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.5500"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivUsername"
                app:layout_constraintHorizontal_bias="0.85"
                android:id="@+id/edtPassword"
                android:inputType="textPassword"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:layout_width="90dp" android:layout_height="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnLogin"
            android:background="@drawable/btn_login"/>

    <Button
            android:layout_width="50dp" android:layout_height="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/btnRegister"
            android:background="@drawable/btn_register"/>

    <ProgressBar
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/pbLoading"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>