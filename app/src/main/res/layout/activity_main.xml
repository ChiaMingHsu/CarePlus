<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/iv_bg"
               android:src="@mipmap/login_bg"
               android:scaleType="fitXY"/>

    <ImageView android:layout_width="308dp" android:layout_height="155dp"
               android:id="@+id/iv_hello"
               android:src="@mipmap/login_hello"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="@+id/iv_bg"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_logo"
               android:src="@mipmap/login_logo"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.283"/>

    <TextView android:layout_width="347dp" android:layout_height="80dp"
              android:id="@+id/tv_username"
              android:background="@mipmap/login_username"
              android:layout_marginBottom="244dp" app:layout_constraintBottom_toBottomOf="@+id/iv_bg"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <EditText android:layout_width="189dp" android:layout_height="40dp"
              android:id="@+id/edt_username"
              app:layout_constraintTop_toTopOf="@id/tv_username" app:layout_constraintStart_toStartOf="@+id/tv_username"
              android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:layout_marginTop="16dp"
              android:inputType="textEmailAddress"/>

    <TextView android:layout_width="347dp" android:layout_height="80dp"
              android:id="@+id/tv_password"
              android:background="@mipmap/login_password"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_username"/>

    <EditText android:layout_width="189dp" android:layout_height="40dp"
              android:id="@+id/edt_password"
              app:layout_constraintStart_toStartOf="@+id/tv_password"
              app:layout_constraintTop_toTopOf="@+id/tv_password" android:layout_marginTop="16dp"
              android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:inputType="textPassword"/>

    <Button android:layout_width="109dp" android:layout_height="70dp"
            android:id="@+id/btn_login"
            android:background="@drawable/btn_login" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.298" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="92dp" app:layout_constraintBottom_toBottomOf="@+id/iv_bg"/>

    <Button android:layout_width="65dp" android:layout_height="31dp"
            android:id="@+id/btn_register"
            android:background="@drawable/btn_register" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.7" app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="661dp"
            app:layout_constraintBaseline_toBaselineOf="@id/btn_login"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_loading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>