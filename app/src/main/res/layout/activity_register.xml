<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:id="@+id/root">

    <ImageView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/ivBg"
            android:src="@drawable/register_bg"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.406"
            app:layout_constraintLeft_toLeftOf="@id/ivSubtitle"
            app:layout_constraintBottom_toTopOf="@id/ivSubtitle"
            android:adjustViewBounds="true"
            android:id="@+id/ivTitle"
            android:src="@drawable/register_title"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.765"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBg"
            app:layout_constraintBottom_toBottomOf="@id/ivBg"
            app:layout_constraintVertical_bias="0.85"
            android:adjustViewBounds="true"
            android:id="@+id/ivSubtitle"
            android:src="@drawable/register_subtitle"
            android:scaleType="fitXY"/>

    <!-- Form -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.569"
            app:layout_constraintLeft_toLeftOf="@id/ivSubtitle"
            app:layout_constraintTop_toBottomOf="@id/ivBg"
            android:layout_marginLeft="8dp"
            android:id="@+id/layoutForm">

        <!-- Name -->

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivNameBg"
                android:src="@drawable/register_field_bg"
                android:scaleType="fitXY"/>

        <EditText
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivNameBg"
                app:layout_constraintRight_toRightOf="@id/ivNameBg"
                app:layout_constraintTop_toTopOf="@id/ivNameBg"
                app:layout_constraintBottom_toBottomOf="@id/ivNameBg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/edtName"
                android:inputType="textPersonName"
                android:hint="Name"
                android:background="@android:color/transparent"/>

        <!-- Email -->

        <ImageView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivNameBg"
                app:layout_constraintRight_toRightOf="@id/ivNameBg"
                app:layout_constraintTop_toBottomOf="@id/ivNameBg"
                android:layout_marginTop="17dp"
                android:adjustViewBounds="true"
                android:id="@+id/ivEmailBg"
                android:src="@drawable/register_field_bg"
                android:scaleType="fitXY"/>

        <EditText
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivEmailBg"
                app:layout_constraintRight_toRightOf="@id/ivEmailBg"
                app:layout_constraintTop_toTopOf="@id/ivEmailBg"
                app:layout_constraintBottom_toBottomOf="@id/ivEmailBg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/edtUsername"
                android:inputType="textEmailAddress"
                android:hint="E-Mail"
                android:background="@android:color/transparent"/>

        <!-- Password -->

        <ImageView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivEmailBg"
                app:layout_constraintRight_toRightOf="@id/ivEmailBg"
                app:layout_constraintTop_toBottomOf="@id/ivEmailBg"
                android:layout_marginTop="17dp"
                android:adjustViewBounds="true"
                android:id="@+id/ivPasswordBg"
                android:src="@drawable/register_field_bg"
                android:scaleType="fitXY"/>

        <EditText
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivPasswordBg"
                app:layout_constraintRight_toRightOf="@id/ivPasswordBg"
                app:layout_constraintTop_toTopOf="@id/ivPasswordBg"
                app:layout_constraintBottom_toBottomOf="@id/ivPasswordBg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/edtPassword"
                android:inputType="textPassword"
                android:hint="Password"
                android:background="@android:color/transparent"/>

        <!-- Password Confirm -->

        <ImageView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivPasswordBg"
                app:layout_constraintRight_toRightOf="@id/ivPasswordBg"
                app:layout_constraintTop_toBottomOf="@id/ivPasswordBg"
                android:layout_marginTop="17dp"
                android:id="@+id/ivPasswordConfirmBg"
                android:src="@drawable/register_field_bg"
                android:scaleType="fitXY"/>

        <EditText
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/ivPasswordConfirmBg"
                app:layout_constraintRight_toRightOf="@id/ivPasswordConfirmBg"
                app:layout_constraintTop_toTopOf="@id/ivPasswordConfirmBg"
                app:layout_constraintBottom_toBottomOf="@id/ivPasswordConfirmBg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="7dp"
                android:id="@+id/edtPasswordConfirm"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:background="@android:color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Submit -->

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.24"
            app:layout_constraintLeft_toRightOf="@id/layoutForm"
            app:layout_constraintTop_toBottomOf="@id/layoutForm"
            android:layout_marginTop="23dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnSubmit"
            android:src="@drawable/register_btn_submit"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <!-- Progress -->

    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/layoutProgress"
            android:clickable="true"
            android:focusable="true"
            android:background="#7000"
            android:visibility="gone">
        <ProgressBar
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/pbLoading"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>