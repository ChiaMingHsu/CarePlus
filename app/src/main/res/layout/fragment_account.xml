<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalendarFragment"
        android:background="#adadbe">

    <ImageView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/ivBg"
            android:src="@drawable/account_bg"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.156"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivIcon"
            android:src="@drawable/account_icon"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.445"
            app:layout_constraintRight_toRightOf="@id/ivIcon"
            app:layout_constraintTop_toBottomOf="@id/ivIcon"
            android:layout_marginTop="6.7dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivTitle"
            android:src="@drawable/account_title"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.881"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivTitle"
            android:layout_marginTop="34dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnLogout"
            android:src="@drawable/account_btn_logout_bg"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/btnLogout"
            app:layout_constraintRight_toRightOf="@id/btnLogout"
            app:layout_constraintTop_toTopOf="@id/btnLogout"
            app:layout_constraintBottom_toBottomOf="@id/btnLogout"
            android:id="@+id/tvLogout"
            android:text="Log out"
            android:textSize="16.7sp"
            android:textColor="#2e2e2e"
            android:textStyle="bold"
            android:letterSpacing="0.3"/>


</androidx.constraintlayout.widget.ConstraintLayout>