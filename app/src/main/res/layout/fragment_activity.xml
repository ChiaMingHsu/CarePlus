<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityFragment">

    <com.alamkanak.weekview.WeekView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/weekView"
            app:defaultEventColor="#f00"
            app:eventTextColor="#0f0"
            app:timeColumnTextSize="12sp"
            app:hourHeight="60dp"
            app:timeColumnPadding="8dp"
            app:timeColumnTextColor="#00f"
            app:timeColumnBackgroundColor="#fff"
            app:headerRowPadding="12dp"
            app:columnGap="8dp"
            app:numberOfVisibleDays="1"
            app:headerRowBackgroundColor="#777"
            app:dayBackgroundColor="#ff0"
            app:todayBackgroundColor="#0ee" />

    <Button
            android:layout_width="50dp" android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/btnCalendar"/>

</androidx.constraintlayout.widget.ConstraintLayout>