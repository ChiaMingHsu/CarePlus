<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityFragment">

    <com.alamkanak.weekview.WeekView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:id="@+id/weekView"
            app:numberOfVisibleDays="1"
            app:hourHeight="60dp"
            app:columnGap="8dp"
            app:timeColumnTextSize="12sp"
            app:timeColumnPadding="8dp"
            app:timeColumnTextColor="#a0a0a0"
            app:timeColumnBackgroundColor="#ffffff"
            app:headerRowPadding="12dp"
            app:headerRowBackgroundColor="#d3d3d3"
            app:headerRowTextColor="#4a4a4a"
            app:dayBackgroundColor="#ffffff"
            app:todayBackgroundColor="#eaeaf1"
            app:todayHeaderTextColor="#fd9c00"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.85"
            android:adjustViewBounds="true"
            android:id="@+id/btnCalendar"
            android:src="@drawable/activity_btn_calendar_normal"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>