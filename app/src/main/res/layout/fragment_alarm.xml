<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlarmFragment">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.083"
            android:id="@+id/glTitleLeft"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/glTitleTop"
            android:orientation="horizontal"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.204"
            app:layout_constraintLeft_toLeftOf="@id/glTitleLeft"
            app:layout_constraintTop_toTopOf="@id/glTitleTop"
            android:adjustViewBounds="true"
            android:id="@+id/ivAlarmTitle"
            android:src="@drawable/alarm_title"
            android:scaleType="fitXY"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.74"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/rvAlarm"/>

</androidx.constraintlayout.widget.ConstraintLayout>