<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

    <com.github.chrisbanes.photoview.PhotoView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/iv_frame"
               android:background="#000"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginTop="100dp"/>

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/ivBg"
               android:src="@mipmap/home_bg"
               android:scaleType="fitXY"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_welcome"
               android:src="@mipmap/home_welcome" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
               android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_display_name"
               android:src="@mipmap/home_display_name"
               app:layout_constraintEnd_toStartOf="@+id/iv_thumbnail" android:layout_marginEnd="7dp"
               android:layout_marginRight="7dp"
               app:layout_constraintTop_toTopOf="@id/iv_thumbnail" android:layout_marginTop="32dp"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_thumbnail"
               android:src="@mipmap/home_thumbnail" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="46dp"
               android:layout_marginRight="46dp" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>