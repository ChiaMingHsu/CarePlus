<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal"
            android:id="@+id/glHorizontalCenter"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.769"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/glHorizontalCenter"
            android:adjustViewBounds="true"
            android:id="@+id/ivHead"
            android:src="@drawable/home_head"/>

    <!-- User Info -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.293"
            app:layout_constraintLeft_toLeftOf="@id/ivCircleFrame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ivCircleFrame"
            android:layout_marginLeft="8dp"
            android:id="@+id/frameUserInfo">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivUserInfoBg"
                android:src="@drawable/home_user_info_bg"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="horizontal"
                android:id="@+id/glUserInfoHorizontalCenter"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.2871"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/glUserInfoHorizontalCenter"
                app:layout_constraintDimensionRatio="H,1:1"
                android:id="@+id/ivAvatar"
                android:src="@drawable/home_avatar_placeholder"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/glUserInfoHorizontalCenter"
                android:id="@+id/tvName"
                android:gravity="center"
                android:text="NAME"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#fff"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:id="@+id/tvEmail"
                android:gravity="center"
                android:text="email@email.com"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="#fff"
                android:textSize="10sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Date -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.300"
            app:layout_constraintRight_toRightOf="@id/ivCircleFrame"
            app:layout_constraintBottom_toTopOf="@id/ivCircleFrame"
            android:layout_marginRight="8dp"
            android:id="@+id/frameDate">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/tvDate"
                android:src="@drawable/home_date_bg"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5708"
                android:orientation="vertical"
                android:id="@+id/glDateVerticalRight"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.1654"
                android:orientation="horizontal"
                android:id="@+id/glDateHorizontalTopYear"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.3813"
                android:orientation="horizontal"
                android:id="@+id/glDateHorizontalTopMonth"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.8200"
                android:orientation="horizontal"
                android:id="@+id/glDateHorizontalBottomDay"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glDateVerticalRight"
                app:layout_constraintTop_toTopOf="@id/glDateHorizontalTopYear"
                android:id="@+id/tvYear"
                android:gravity="right"
                android:text="2019"
                android:textColor="#fff"
                android:textSize="10sp"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glDateVerticalRight"
                app:layout_constraintTop_toTopOf="@id/glDateHorizontalTopMonth"
                android:id="@+id/tvMonth"
                android:gravity="right"
                android:text="12"
                android:textColor="#fff"
                android:textSize="10sp"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glDateVerticalRight"
                app:layout_constraintBottom_toBottomOf="@id/glDateHorizontalBottomDay"
                android:id="@+id/tvDay"
                android:gravity="right"
                android:text="31"
                android:textColor="#fff"
                android:textSize="28sp"
                android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.856"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintVertical_bias="0.6"
            android:id="@+id/ivCircleFrame"
            android:src="@drawable/home_frame_placeholder"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.143"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCircleFrame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/btnEnterFullscreen"
            android:src="@drawable/home_btn_enter_fullscreen"
            android:background="#0000"/>

    <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/ivFullFrame"
            android:background="#000"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.143"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCircleFrame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/btnExitFullscreen"
            android:src="@drawable/home_btn_exit_fullscreen"
            android:background="#0000"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.333"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnEnterFullscreen"
            app:layout_constraintBottom_toBottomOf="@id/btnEnterFullscreen"
            android:layout_marginRight="39.7dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnPrivacy"
            android:src="@drawable/home_btn_privacy_protection_dark"
            android:tag="0"
            android:background="@android:color/transparent"/>

    <!-- Location -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.312"
            app:layout_constraintRight_toRightOf="@id/ivCircleFrame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/frameDate"
            android:id="@+id/frameLocation">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivLocationBg"
                android:src="@drawable/home_location_bg"/>

        <ImageView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.4924"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivLocationText"
                android:src="@drawable/home_location_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>