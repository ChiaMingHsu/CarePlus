<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment"
        android:background="#5067fb">

    <View
            android:layout_width="match_parent" android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="@id/layoutDate"
            app:layout_constraintBottom_toBottomOf="@id/layoutDate"
            android:id="@+id/glBgTop"/>


    <ImageView
            android:layout_width="match_parent" android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="@id/glBgTop"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ivBg"
            android:src="@drawable/home_bg_light"
            android:scaleType="fitXY"/>

    <!-- User Info -->

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="36.9dp"
            android:layout_marginTop="33.3dp"
            android:id="@+id/tvEmail"
            android:gravity="left"
            android:text="email@email.com"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="16.7sp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tvEmail"
            app:layout_constraintTop_toBottomOf="@id/tvEmail"
            android:id="@+id/tvLocation"
            android:gravity="left"
            android:text="爸媽的家"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="16.7sp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tvLocation"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            android:id="@+id/tvNote"
            android:gravity="left"
            android:text="備註資訊"
            android:singleLine="true"
            android:textColor="#b5b5b9"
            android:textSize="16.7sp"
            android:textStyle="bold"/>

    <!-- Date -->

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.395"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ivCircleFrame"
            android:layout_marginRight="6.7dp"
            android:id="@+id/layoutDate">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/tvDate"
                android:src="@drawable/home_date_bg"
                android:scaleType="fitXY"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.6284"
                android:orientation="vertical"
                android:id="@+id/glDateVerticalRight"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.11"
                android:orientation="horizontal"
                android:id="@+id/glDateHorizontalTopYear"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.8200"
                android:orientation="horizontal"
                android:id="@+id/glDateHorizontalBottomDay"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glDateVerticalRight"
                app:layout_constraintTop_toTopOf="@id/glDateHorizontalTopYear"
                android:id="@+id/tvYear"
                android:gravity="right"
                android:text="2019"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glDateVerticalRight"
                app:layout_constraintTop_toBottomOf="@id/tvYear"
                android:id="@+id/tvMonth"
                android:gravity="right"
                android:text="12"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glDateVerticalRight"
                app:layout_constraintBottom_toBottomOf="@id/glDateHorizontalBottomDay"
                android:id="@+id/tvDay"
                android:gravity="right"
                android:text="31"
                android:textColor="#fff"
                android:textSize="44.7sp"
                android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.856"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintVertical_bias="0.6"
            android:id="@+id/ivCircleFrame"
            android:src="@drawable/home_frame_placeholder"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.143"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCircleFrame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/btnEnterFullscreen"
            android:src="@drawable/home_btn_enter_fullscreen"
            android:background="#0000"/>

    <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/ivFullFrame"
            android:background="#000"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.143"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCircleFrame"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/btnExitFullscreen"
            android:src="@drawable/home_btn_exit_fullscreen"
            android:background="#0000"
            android:visibility="gone"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.278"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnEnterFullscreen"
            app:layout_constraintBottom_toBottomOf="@id/btnEnterFullscreen"
            android:layout_marginRight="15.3dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnPrivacy"
            android:src="@drawable/home_btn_privacy_protection_dark"
            android:tag="0"
            android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>