<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaybackFragment">

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="記錄"
            android:textSize="23.3sp"
            android:textColor="#4b5cff"
            android:textStyle="bold"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            android:id="@+id/glVerticalCenter"/>

    <FrameLayout
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.741"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1.75"
            android:id="@+id/layoutPlayback">

        <VideoView
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/vvPlayback"/>

    </FrameLayout>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.325"
            app:layout_constraintLeft_toLeftOf="@id/glVerticalCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.05"
            android:adjustViewBounds="true"
            android:id="@+id/ivMessageBg"
            android:src="@drawable/playback_message_bg"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.8751"
            android:orientation="horizontal"
            android:id="@+id/glHorizontalBottom"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontalBottom"
            android:adjustViewBounds="true"
            android:id="@+id/btnSave"
            android:src="@drawable/playback_btn_save"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.146"
            app:layout_constraintLeft_toRightOf="@id/btnSave"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontalBottom"
            app:layout_constraintHorizontal_bias="0.7"
            android:adjustViewBounds="true"
            android:id="@+id/btnBack"
            android:src="@drawable/playback_btn_back"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>


</androidx.constraintlayout.widget.ConstraintLayout>