<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaybackFragment">

    <ImageView
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:id="@+id/ivIcon"
            android:src="@drawable/playback_bg"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.204"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="31dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivTitle"
            android:src="@drawable/playback_title"
            android:scaleType="fitXY"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            android:id="@+id/glVerticalCenter"/>

    <FrameLayout
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1.75"
            android:id="@+id/layoutPlayback">

        <VideoView
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/vvPlayback"/>

    </FrameLayout>

    <TextView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.352"
            app:layout_constraintLeft_toLeftOf="@id/glVerticalCenter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutPlayback"
            app:layout_constraintBottom_toTopOf="@id/layoutPlayback"
            android:adjustViewBounds="true"
            android:id="@+id/tvDate"
            android:gravity="center"
            android:text="0000.00.00"
            android:textAlignment="center"
            android:textSize="13.3sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:background="@drawable/playback_date_bg_alarm_standard"
            android:scaleType="fitXY"/>

    <TextView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.352"
            app:layout_constraintLeft_toLeftOf="@id/tvDate"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            android:adjustViewBounds="true"
            android:id="@+id/tvTime"
            android:gravity="center"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="13.3sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:background="@drawable/playback_time_bg_alarm_standard"
            android:scaleType="fitXY"/>

    <TextView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.352"
            app:layout_constraintLeft_toLeftOf="@id/tvTime"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            android:adjustViewBounds="true"
            android:id="@+id/tvContent"
            android:gravity="center"
            android:text="Content"
            android:textAlignment="center"
            android:textSize="16.7sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:background="@drawable/playback_content_bg_alarm_standard"
            android:scaleType="fitXY"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.8751"
            android:orientation="horizontal"
            android:id="@+id/glHorizontalBottom"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/glHorizontalBottom"
            android:adjustViewBounds="true"
            android:id="@+id/btnSave"
            android:src="@drawable/playback_btn_save"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>