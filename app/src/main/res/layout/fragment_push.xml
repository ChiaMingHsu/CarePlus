<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PushFragment"
        android:background="#adadbe">

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.426"
            app:layout_constraintLeft_toLeftOf="@id/layoutList"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutList"
            android:adjustViewBounds="true"
            android:id="@+id/ivTitle"
            android:src="@drawable/push_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.833"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/layoutList">

        <ImageView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:id="@+id/ivListBg"
                android:src="@drawable/push_list_bg"
                android:scaleType="fitXY"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.159"
                android:orientation="vertical"
                android:id="@+id/glSettingTextLeft"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.881"
                android:orientation="vertical"
                android:id="@+id/glSettingSwitchRight"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.08"
                android:orientation="horizontal"
                android:id="@+id/glSettingTop"/>

        <ImageView
                android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3543"
                app:layout_constraintLeft_toLeftOf="@id/glSettingTextLeft"
                app:layout_constraintTop_toTopOf="@id/glSettingTop"
                android:adjustViewBounds="true"
                android:id="@+id/ivPushText"
                android:src="@drawable/push_setting_push_text"
                android:scaleType="fitXY"/>

        <com.kyleduo.switchbutton.SwitchButton
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/glSettingSwitchRight"
                app:layout_constraintTop_toTopOf="@id/ivPushText"
                app:layout_constraintBottom_toBottomOf="@id/ivPushText"
                app:kswThumbDrawable="@drawable/push_switch"
                app:kswBackDrawable="@drawable/push_switch_bg"
                android:id="@+id/swPush"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>