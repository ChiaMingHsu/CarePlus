<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PushFragment"
        android:background="#adadbe">

    <ImageView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/ivBg"
            android:src="@drawable/push_bg"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.115"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="34.3dp"
            android:layout_marginTop="34dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivIcon"
            android:src="@drawable/push_icon"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.659"
            app:layout_constraintRight_toRightOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="57.3dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivTitle"
            android:src="@drawable/push_title"
            android:scaleType="fitXY"/>

    <ImageView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivTitle"
            android:layout_marginTop="37.1dp"
            android:adjustViewBounds="true"
            android:id="@+id/ivPushItemBg"
            android:src="@drawable/push_item_bg"
            android:scaleType="fitXY"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/ivPushItemBg"
            app:layout_constraintTop_toTopOf="@id/ivPushItemBg"
            app:layout_constraintBottom_toBottomOf="@id/ivPushItemBg"
            android:layout_marginLeft="48.7dp"
            android:id="@+id/tvPush"
            android:text="Push Notification"
            android:textSize="16.7sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:letterSpacing="0.2"/>

    <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/ivPushItemBg"
            app:layout_constraintTop_toTopOf="@id/ivPushItemBg"
            app:layout_constraintBottom_toBottomOf="@id/ivPushItemBg"
            android:layout_marginRight="50dp"
            app:kswThumbDrawable="@drawable/push_switch"
            app:kswBackDrawable="@drawable/push_switch_bg"
            android:id="@+id/swPush"/>

</androidx.constraintlayout.widget.ConstraintLayout>