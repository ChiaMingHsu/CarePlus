<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegionFragment">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/iv_bg"
               android:src="@mipmap/region_bg"
               android:scaleType="fitXY"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/iv_frame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_marginTop="110dp"/>

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/iv_mask"
               android:visibility="gone"
               android:tag="none"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_door_block"
               android:src="@mipmap/region_door_block" app:layout_constraintTop_toTopOf="@id/iv_toilet_block"
               app:layout_constraintEnd_toStartOf="@id/iv_toilet_block" android:layout_marginRight="24dp"
               android:layout_marginEnd="24dp"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_toilet_block"
               android:src="@mipmap/region_toilet_block" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_room_block"
               android:src="@mipmap/region_room_block" app:layout_constraintTop_toTopOf="@id/iv_toilet_block"
               app:layout_constraintStart_toEndOf="@+id/iv_toilet_block" android:layout_marginLeft="24dp"
               android:layout_marginStart="24dp"/>

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/btn_door"
                 android:src="@mipmap/region_door" app:layout_constraintBottom_toTopOf="@id/iv_door_block"
                 app:layout_constraintStart_toStartOf="@id/iv_door_block"
                 app:layout_constraintEnd_toEndOf="@id/iv_door_block"
                 android:background="#0000"/>

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/btn_toilet"
                 android:src="@mipmap/region_toilet" app:layout_constraintStart_toStartOf="@id/iv_toilet_block"
                 app:layout_constraintEnd_toEndOf="@id/iv_toilet_block"
                 app:layout_constraintBottom_toTopOf="@id/iv_toilet_block"
                 android:background="#0000"/>

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/btn_room"
                 android:src="@mipmap/region_room" app:layout_constraintStart_toStartOf="@id/iv_room_block"
                 app:layout_constraintEnd_toEndOf="@id/iv_room_block"
                 app:layout_constraintBottom_toTopOf="@id/iv_room_block"
                 android:background="#0000"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_door_small"
               android:src="@mipmap/region_door_small" app:layout_constraintTop_toTopOf="@id/iv_door_block"
               android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@id/iv_door_block"
               app:layout_constraintEnd_toEndOf="@id/iv_door_block"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_toilet_small"
               android:src="@mipmap/region_toilet_small" app:layout_constraintStart_toStartOf="@id/iv_toilet_block"
               app:layout_constraintEnd_toEndOf="@id/iv_toilet_block"
               app:layout_constraintTop_toTopOf="@id/iv_toilet_block" android:layout_marginTop="16dp"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/iv_room_small"
               android:src="@mipmap/region_room_small" app:layout_constraintStart_toStartOf="@id/iv_room_block"
               app:layout_constraintTop_toTopOf="@id/iv_room_block"
               app:layout_constraintEnd_toEndOf="@id/iv_room_block" android:layout_marginTop="16dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_door" app:layout_constraintStart_toStartOf="@id/iv_door_block"
            app:layout_constraintEnd_toEndOf="@id/iv_door_block"
            app:layout_constraintTop_toBottomOf="@id/iv_door_small" android:layout_marginTop="8dp"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_toilet" app:layout_constraintStart_toStartOf="@id/iv_toilet_block"
            app:layout_constraintEnd_toEndOf="@id/iv_toilet_block"
            app:layout_constraintTop_toBottomOf="@id/iv_toilet_small" android:layout_marginTop="8dp"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_room" app:layout_constraintStart_toStartOf="@id/iv_room_block"
            app:layout_constraintEnd_toEndOf="@id/iv_room_block"
            app:layout_constraintTop_toBottomOf="@id/iv_room_small" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>