<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingFragment"
        android:id="@+id/layout_root">

    <Button android:layout_width="100dp" android:layout_height="50dp"
            android:id="@+id/btn_alarm" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintHorizontal_bias="0.1"
            android:background="#0000"/>

    <Button android:layout_width="100dp" android:layout_height="50dp"
            android:id="@+id/btn_remind" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintHorizontal_bias="0.9"
            android:background="#0000"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                                       android:id="@+id/layout_alarm">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:id="@+id/iv_bg_alarm"
                   android:src="@mipmap/setting_bg_alarm"
                   android:scaleType="fitXY"/>

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:id="@+id/iv_remind_block_inactive"
                   android:src="@mipmap/setting_remind_block_inactive"
                   android:scaleType="fitXY"/>

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:id="@+id/iv_alarm_block"
                   android:src="@mipmap/setting_alarm_block"
                   android:scaleType="fitXY"/>

        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/sv_alarm"
                    android:layout_marginTop="230dp"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_alarm_fall_down"
                               android:src="@mipmap/setting_alarm_fall_down"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_alarm_fall_down"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_alarm_fall_down_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_alarm_stuck_toilet"
                               android:src="@mipmap/setting_alarm_stuck_toilet"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_alarm_stuck_toilet"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_alarm_stuck_toilet_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_alarm_stuck_room"
                               android:src="@mipmap/setting_alarm_stuck_room"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_alarm_stuck_room"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_alarm_stuck_room_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_alarm_stuck_outdoor"
                               android:src="@mipmap/setting_alarm_stuck_outdoor"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_alarm_stuck_outdoor"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_alarm_stuck_outdoor_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent"
                                                       android:id="@+id/layout_remind"
                                                       android:visibility="gone">

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:id="@+id/iv_bg_remind"
                   android:src="@mipmap/setting_bg_remind"
                   android:scaleType="fitXY"/>

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:id="@+id/iv_alarm_block_inactive"
                   android:src="@mipmap/setting_alarm_block_inactive"
                   android:scaleType="fitXY"/>

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:id="@+id/iv_remind_block"
                   android:src="@mipmap/setting_remind_block"
                   android:scaleType="fitXY"/>

        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/sv_remind"
                    android:layout_marginTop="230dp"
                    android:padding="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_remind_exercise"
                               android:src="@mipmap/setting_remind_exercise"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_remind_exercise"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_remind_exercise_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_remind_go_out"
                               android:src="@mipmap/setting_remind_go_out"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_remind_go_out"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_remind_go_out_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:weightSum="3"
                              android:gravity="center">

                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:id="@+id/iv_remind_take_medicine"
                               android:src="@mipmap/setting_remind_take_medicine"/>

                    <Switch android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/sw_remind_take_medicine"
                            android:switchMinWidth="60dp"
                            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"/>

                    <Button android:layout_width="0dp" android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                            android:id="@+id/btn_remind_take_medicine_apply"
                            android:background="@drawable/btn_apply"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>