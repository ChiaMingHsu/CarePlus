<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingFragment"
        android:background="#adadbe">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.083"
            android:id="@+id/glTitleLeft"
            android:orientation="vertical"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.143"
            app:layout_constraintLeft_toLeftOf="@id/glTitleLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ivBg"
            android:adjustViewBounds="true"
            android:id="@+id/ivTitle"
            android:src="@drawable/setting_title"/>

    <ImageView
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.945"
            app:layout_constraintHeight_percent="0.802"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/ivBg"
            android:src="@drawable/setting_bg"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.449"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBg"
            android:layout_marginTop="45.5dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnFunction"
            android:src="@drawable/setting_btn_function"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/btnFunction"
            app:layout_constraintRight_toRightOf="@id/btnFunction"
            app:layout_constraintTop_toBottomOf="@id/btnFunction"
            android:layout_marginTop="16.4dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnCalendar"
            android:src="@drawable/setting_btn_calendar"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/btnCalendar"
            app:layout_constraintRight_toRightOf="@id/btnCalendar"
            app:layout_constraintTop_toBottomOf="@id/btnCalendar"
            android:layout_marginTop="16.4dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnStorage"
            android:src="@drawable/setting_btn_storage"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/btnStorage"
            app:layout_constraintRight_toRightOf="@id/btnStorage"
            app:layout_constraintTop_toBottomOf="@id/btnStorage"
            android:layout_marginTop="16.4dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnPush"
            android:src="@drawable/setting_btn_push"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <ImageButton
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/btnPush"
            app:layout_constraintRight_toRightOf="@id/btnPush"
            app:layout_constraintTop_toBottomOf="@id/btnPush"
            android:layout_marginTop="16.4dp"
            android:adjustViewBounds="true"
            android:id="@+id/btnAccount"
            android:src="@drawable/setting_btn_account"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbLoading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>