<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="34.9dp"
        android:background="#0f0">

    <ImageButton
            android:layout_width="13.2dp" android:layout_height="13.2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="0.7dp"
            android:layout_marginBottom="7.7dp"
            android:id="@+id/btnPlay"
            android:background="#4b5cff"/>
    
    <ImageView
            android:layout_width="0dp" android:layout_height="21.3dp"
            app:layout_constraintWidth_percent="0.8034"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="3.3dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/ivBody"
            android:background="#4b5cff"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/ivBody"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="12dp"
            android:id="@+id/tvDate"
            android:text="0000.00.00"
            android:textSize="7sp"
            android:textColor="#6170ff"
            android:lineSpacingExtra="27.3sp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="@id/ivBody"
            app:layout_constraintBottom_toBottomOf="@id/ivBody"
            android:id="@+id/tvTime"
            android:text="00:00 AM"
            android:textSize="7sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="6.3sp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBody"
            app:layout_constraintBottom_toBottomOf="@id/ivBody"
            android:layout_marginRight="13dp"
            android:id="@+id/tvContent"
            android:text="內容"
            android:textSize="9.3sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="4.7sp"
            android:textStyle="bold"/>/>

</androidx.constraintlayout.widget.ConstraintLayout>