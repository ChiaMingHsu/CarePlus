<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content" android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:adjustViewBounds="true"
            android:id="@+id/ivTextBg"
            android:src="@drawable/notification_weekday_focus_bg"
            android:scaleType="fitXY"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/ivTextBg"
            app:layout_constraintRight_toRightOf="@id/ivTextBg"
            app:layout_constraintTop_toTopOf="@id/ivTextBg"
            app:layout_constraintBottom_toBottomOf="@id/ivTextBg"
            android:id="@+id/tvText"
            android:gravity="center"
            android:text="Sat"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>